
@{
    ViewData["Title"] = "Books";
    @model BookViewModel
}





@{
    if (Model.User.IsAdmin)
    {
        <a class="btn btn-primary" asp-controller="Books" asp-action="Add"> Add Books </a>
        <br>
        <br>
        <br>
    }

    <div class="container">
        <div class="row row-cols-3">
            @foreach (var book in Model.Books)
            {
                <div class="col">
                    <div class="card" style="width: 20rem;">
                        <img src="unnamed.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@book.Name</h5>
                            <p class="card-text">@book.Description</p>
                            <p class="card-text">$ @book.Price</p>

                            @{ if (Model.User.IsAdmin)
                                {
                                    <a class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Edit" asp-route-id="@book.BookId">Edit</a>
                                }
                                else
                                {
                                    <a class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Edit" asp-route-id="@book.BookId">Add to Cart</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>




}

